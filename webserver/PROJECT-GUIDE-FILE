# REQUIREMENTS:
1.SERVER=1 (UBUNTU-1)
2.install apche2
3.copy the content

# Update the package list
sudo apt update

# Install Nginx
sudo apt install nginx -y

# Start Nginx
sudo systemctl start nginx

# Enable Nginx to start on boot
sudo systemctl enable nginx

# Download the mediplus-lite template (if wget is not installed, install it first)
sudo apt install wget unzip -y
wget -O mediplus-lite.zip https://www.free-css.com/assets/files/free-css-templates/download/page296/mediplus-lite.zip

# Unzip the template
unzip mediplus-lite.zip -d mediplus-lite

# Move the template files to the Nginx web root directory
sudo mv mediplus-lite/* /var/www/html/

# Adjust permissions
sudo chown -R www-data:www-data /var/www/html
sudo chmod -R 755 /var/www/html

# Optional: Install Certbot and configure HTTPS (uncomment if you have a domain)
# sudo apt install certbot python3-certbot-nginx -y
# sudo certbot --nginx -d your-domain.com
# sudo certbot renew --dry-run

echo "Web server setup complete. Access it at http://your-ec2-public-ip"
